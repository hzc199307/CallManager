<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xp.callmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.xp.callmanager.Activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xp.callmanager.Activity.CallManagerActivity"
            android:label="@string/title_activity_call_manager" >
        </activity>
        <activity
            android:name="com.xp.callmanager.Activity.TabsActivity"
            android:label="@string/title_activity_tabs" >
        </activity>
        <activity
            android:name="com.xp.callmanager.Activity.TongxunActivity"
            android:label="@string/title_activity_tongxun" >
        </activity>
        <activity
            android:name="com.xp.callmanager.Activity.BusinessActivity"
            android:label="@string/title_activity_business" >
        </activity>
        <activity
            android:name="com.xp.callmanager.Activity.MoreActivity"
            android:label="@string/title_activity_more" >
        </activity>
        <activity
            android:name="com.xp.callmanager.more.Activity.AttributionActivity"
            android:label="@string/title_activity_attribution" >
        </activity>
        <activity
            android:name="com.xp.callmanager.Activity.SenterActivity"
            android:label="@string/title_activity_senter" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" >
    </uses-permission>

</manifest>