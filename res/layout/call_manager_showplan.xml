<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget48"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/b"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10px"
        android:text="通信结构统计结果" >
    </TextView>

    <ProgressBar
        android:id="@+id/pbar_process"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:max="100"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:progress="30" >
    </ProgressBar>

    <TableLayout
        android:id="@+id/TableLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:stretchColumns="1,2,3" >

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="本地通话时长" >
            </TextView>

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dip"
                android:text="112" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="外地通话时长" >
            </TextView>

            <TextView
                android:id="@+id/txt_reality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dip"
                android:text="25" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="接话时长" >
            </TextView>

            <TextView
                android:id="@+id/txt_proportions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="102"
                android:paddingLeft="5dip"
                >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="使用套餐的总费用" >
            </TextView>

            <TextView
                android:id="@+id/txt_estimated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dip"
                android:text="51.8元"  >
            </TextView>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/e"
        android:clipToPadding="true"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:stretchColumns="1,2,3" >

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80dip" >
            </TextView>

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#999900"
                android:gravity="center"
                android:text="今日"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#999900"
                android:gravity="center"
                android:text="本周"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#999900"
                android:gravity="center"
                android:text="本段时间"
                android:textColor="#FFFFFF" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#181818" />

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#999900"
                android:gravity="center"
                android:text="拨出(分钟)"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/outoftoday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2" >
            </TextView>

            <TextView
                android:id="@+id/outofweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23" >
            </TextView>

            <TextView
                android:id="@+id/outofmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="107" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#181818" />

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#999900"
                android:gravity="center"
                android:text="接入(分钟)"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/inoftoday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5" >
            </TextView>

            <TextView
                android:id="@+id/inofweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="16" >
            </TextView>

            <TextView
                android:id="@+id/inofmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="89" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#181818" />

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#999900"
                android:gravity="center"
                android:text="总计(分钟)"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/totaloftoday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7" >
            </TextView>

            <TextView
                android:id="@+id/totalofweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="39" >
            </TextView>

            <TextView
                android:id="@+id/totalofmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="196" >
            </TextView>
        </TableRow>
    </TableLayout>

</LinearLayout>